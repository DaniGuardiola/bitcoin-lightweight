{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist/node",
    "noImplicitAny": false,
    "sourceMap": false,
    "removeComments": false,
    "moduleResolution": "node",
    "strict": true,
    "lib": ["es6"],
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.*"
  ],
  "include": [
    "src/**/*"
  ],
  "await-promise": [true, "Bluebird"]
}
