{
  "name": "bitcoin-lightweight",
  "version": "0.0.1",
  "description": "Lightweight Bitcoin electrum wallet module, with BIP44, SPV, events and a friendly high level interface",
  "main": "main.js",
  "repository": "git@gitlab.com:altruist-projects/fairwallet-lib.git",
  "author": "Dani Guardiola",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "docco": "^0.8.0",
    "documentation": "^6.3.2",
    "mocha": "^5.1.1",
    "npm-check": "^5.7.0",
    "nsp": "^3.2.1",
    "nyc": "^11.7.1",
    "pre-commit": "^1.2.2",
    "standard": "^11.0.1"
  },
  "scripts": {
    "lint": "standard",
    "fix": "standard --fix",
    "test": "nyc --check-coverage --lines 0 mocha",
    "test-watch": "mocha --watch",
    "check-security": "nsp check",
    "check-deps": "npm-check -p",
    "coverage": "nyc check-coverage --lines 90",
    "coverage-report": "nyc report --reporter html --report-dir coverage",
    "code-doc": "docco --output docs *.js",
    "api-doc": "documentation readme main.js src/*.js -s 'API reference'",
    "docs": "yarn -s code-doc && yarn -s api-doc",
    "git-add-docs": "git add docs"
  },
  "pre-commit": [
    "test",
    "lint",
    "check-deps",
    "docs",
    "git-add-docs",
    "check-security"
  ],
  "dependencies": {
    "bip39": "^2.5.0",
    "bitcoinjs-lib": "^3.3.2",
    "bluebird": "^3.5.1",
    "electrum-client": "gitlab:DaniGuardiola/node-electrum-client",
    "joi": "^13.4.0"
  }
}
