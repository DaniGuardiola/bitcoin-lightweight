{
  "name": "bitcoin-lightweight",
  "version": "0.0.1",
  "description": "Lightweight Bitcoin electrum wallet module, with BIP44, SPV, events and a friendly high level interface",
  "main": "dist/node/main.js",
  "repository": "git@gitlab.com:altruist-projects/fairwallet-lib.git",
  "author": "Dani Guardiola",
  "license": "MIT",
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "@types/bip39": "^2.4.0",
    "@types/bitcoinjs-lib": "^3.4.0",
    "@types/bluebird-global": "^3.5.5",
    "@types/joi": "^13.3.0",
    "@types/node": "^10.5.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "npm-check": "^5.7.0",
    "nsp": "^3.2.1",
    "nyc": "^12.0.2",
    "pre-commit": "^1.2.2",
    "standard": "^11.0.1",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.1.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.0"
  },
  "scripts": {
    "build-node": "rm -rf dist/node && tsc -p ./ && cp -r src/tmp dist/node/",
    "build-browser": "npm run build-node -s && rm -rf dist/browser && mkdir -p dist/browser && browserify --node dist/node/main.js > dist/browser/bundle.js",
    "build": "npm run build-browser -s",
    "lint": "tslint",
    "fix": "tslint --fix",
    "test": "nyc --check-coverage --lines 0 mocha",
    "test-watch": "mocha --watch",
    "check-security": "nsp check",
    "check-deps": "npm-check -p",
    "coverage": "nyc check-coverage --lines 90",
    "coverage-report": "nyc report --reporter html --report-dir coverage",
    "clean-docs": "rm -rf docs",
    "docs": "npm run clean-docs -s && typedoc --out docs src"
  },
  "pre-commit": [
    "test",
    "lint",
    "clean-docs",
    "check-deps",
    "docs",
    "check-security"
  ],
  "dependencies": {
    "big.js": "^5.1.2",
    "bip39": "^2.5.0",
    "bitcoinjs-lib": "^3.3.2",
    "bluebird": "^3.5.1",
    "browserify": "^16.2.2",
    "electrum-client": "github:DaniGuardiola/node-electrum-client#next_v0.1",
    "joi": "^13.4.0",
    "satoshi-bitcoin": "^1.0.4",
    "tsify": "^4.0.0"
  }
}
